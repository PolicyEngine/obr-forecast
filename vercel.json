{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build && mkdir -p ../dist && cp -r out/* ../dist/",
  "installCommand": "pip install -r requirements.txt",
  "builds": [
    { 
      "src": "api/vercel.py", 
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/vercel.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "api/vercel.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "STATIC_FILES_DIR": "dist"
  }
}